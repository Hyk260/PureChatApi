{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with Nodemon",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "args": ["--exec", "tsx src/server.ts"],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
